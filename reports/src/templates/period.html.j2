<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width,initial-scale=1"/>
  <title>{{ title }}</title>
  <style>
    :root{--bg:#0b0f19;--card:#121a2a;--text:#e7ecff;--muted:#a8b3d8;--accent:#77a7ff;}
    body{margin:0;font-family:ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial; background:var(--bg); color:var(--text);}
    .wrap{max-width:1100px;margin:0 auto;padding:24px;}
    .card{background:var(--card);border:1px solid rgba(255,255,255,.08);border-radius:16px;padding:16px; box-shadow:0 6px 22px rgba(0,0,0,.35); margin-bottom:14px;}
    table{width:100%;border-collapse:collapse;font-size:13px;}
    th,td{padding:8px 10px;border-bottom:1px solid rgba(255,255,255,.08);vertical-align:top;}
    th{color:var(--muted);font-weight:700;text-align:left;}
    a{color:var(--accent);text-decoration:none;}
    a:hover{text-decoration:underline;}
    .muted{color:var(--muted);}
    .badge{display:inline-flex;align-items:center;gap:8px;padding:8px 10px;border-radius:999px;border:1px solid rgba(255,255,255,.12);background:rgba(255,255,255,.04);}
  </style>
</head>
<body>
<div class="wrap">
  <div style="display:flex;gap:12px;align-items:center;margin-bottom:14px">
    <a href="index.html">‚Üê Dashboard</a>
    <div style="font-size:20px;font-weight:800">{{ title }}</div>
    <div style="color:var(--muted)">{{ period }}</div>
  </div>

  {% if ai %}
  <div class="card">
    <div style="font-weight:800;margin-bottom:10px">üß† An√°lisis IA</div>

    <div class="badge" style="margin-bottom:10px">
      <span style="font-weight:800">Tema:</span>
      <span>{{ ai.theme }}</span>
    </div>

    <div style="display:grid;grid-template-columns:1fr;gap:10px">
      <div>
        <div style="font-weight:800;margin:10px 0 6px">Patrones</div>
        <ul>
          {% for x in ai.top_patterns %}
            <li class="muted">{{ x }}</li>
          {% endfor %}
        </ul>
      </div>

      <div>
        <div style="font-weight:800;margin:10px 0 6px">Victorias</div>
        <ul>
          {% for x in ai.wins %}
            <li class="muted">{{ x }}</li>
          {% endfor %}
        </ul>
      </div>

      <div>
        <div style="font-weight:800;margin:10px 0 6px">Cuellos de botella</div>
        <ul>
          {% for x in ai.bottlenecks %}
            <li class="muted">{{ x }}</li>
          {% endfor %}
        </ul>
      </div>

      <div>
        <div style="font-weight:800;margin:10px 0 6px">Reglas pr√≥xima semana</div>
        <ul>
          {% for x in ai.next_week_rules %}
            <li class="muted">{{ x }}</li>
          {% endfor %}
        </ul>
      </div>

      <div>
        <div style="font-weight:800;margin:10px 0 6px">Si fallo, entonces...</div>
        <ul>
          {% for x in ai.if_fail_then %}
            <li class="muted">{{ x }}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="badge" style="margin-top:6px">
        <span style="font-weight:800">Identidad:</span>
        <span class="muted">{{ ai.one_sentence_identity }}</span>
      </div>
    </div>
  </div>
  {% endif %}

  <div class="card">
    <table>
      <thead>
        <tr>
          {% for k in rows[0].keys() %}
            <th>{{ k }}</th>
          {% endfor %}
        </tr>
      </thead>
      <tbody>
        {% for r in rows %}
          <tr>
            {% for v in r.values() %}
              <td>{{ v }}</td>
            {% endfor %}
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
</body>
</html>
